{
	"name": "eleventy-base-blog",
	"version": "9.0.0",
	"description": "A starter repository for a blog web site using the Eleventy site generator.",
	"type": "module",
	"scripts": {
		"dev": "concurrently -k \"npm:dev:11ty\" \"npm:dev:tailwind\"",
		"dev:11ty": "npx @11ty/eleventy --serve --port 3000",
		"dev:tailwind": "npx tailwindcss -i ./css/index.css -o ./public/style.out.css --watch",
		"build": "npm run css:build && npm run site:build",
		"css:build": "npx tailwindcss -i ./css/index.css -o ./public/style.out.css --minify",

		"build-nocolor": "cross-env NODE_DISABLE_COLORS=1 npx @11ty/eleventy",
		"build-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/",
		"debug": "cross-env DEBUG=Eleventy* npx @11ty/eleventy",
		"benchmark": "cross-env DEBUG=Eleventy:Benchmark* npx @11ty/eleventy"

	},
	"repository": {
		"type": "git",
		"url": "git://github.com/11ty/eleventy-base-blog.git"
	},
	"author": {
		"name": "Zach Leatherman",
		"email": "zachleatherman@gmail.com",
		"url": "https://zachleat.com/"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/11ty"
	},
	"bugs": {
		"url": "https://github.com/11ty/eleventy-base-blog/issues"
	},
	"homepage": "https://github.com/11ty/eleventy-base-blog#readme",
	"devDependencies": {
		"@11ty/eleventy": "^3.1.0",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^0.3.5",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
		"cross-env": "^7.0.3",
		"luxon": "^3.6.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"prismjs": "^1.30.0",
		"zod": "^3.24.4",
		"zod-validation-error": "^3.4.1"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.1.7",
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"@zachleat/heading-anchors": "^1.0.3",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.2",
		"tailwindcss": "^4.1.4"
	}
}
